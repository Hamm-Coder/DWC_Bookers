
<h1>Books</h1>

<div class="books-wrap">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a class="show_<%= book.id %>" href="/books/<%= book.id %>">Show</a></td>
        <td><a class="edit_<%= book.id %>" href="/books/<%= book.id %>/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_<%= book.id %>" rel="nofollow" data-method="delete" href="/books/<%= book.id %>">Destroy</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_252181" rel="nofollow" data-method="delete" href="/books/252181">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<p></p>

<h1>New Book</h1>
<!-- form_with部分-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
