<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= content_tag(:div, id: 'error_explanation') do %>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_with model: @book, url: book_path, html:{id: 'edit_book', class: 'editbook'}, method: :patch do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'book_title' %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'book_body' %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id), class:"show_#{@book.id}" %>
